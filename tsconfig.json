{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "dist/files",
    "declaration": true,
    "rootDir": "src",
    "downlevelIteration": true
  },

  "include": [
    "./src/*"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}